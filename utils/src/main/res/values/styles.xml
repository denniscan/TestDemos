<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!-- Base application theme. -->
	<style name="AppTheme"
		parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<!-- 无标题栏Activity -->
	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="MyAlertDialog"
		parent="Base.V7.Theme.AppCompat.Light.Dialog">
		<!-- Used for the buttons -->
		<item name="colorAccent">@color/colorPrimaryDark</item>
		<item name="android:windowMinWidthMajor">@dimen/x300</item>
		<item name="android:windowMinWidthMinor">@dimen/x300</item>
		<item name="windowFixedWidthMajor">@dimen/x300</item>
		<item name="windowFixedWidthMinor">@dimen/x300</item>
	</style>
</resources>